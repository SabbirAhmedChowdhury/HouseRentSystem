{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=HouseRentManagementDB;Trusted_Connection=True;Connect Timeout=30;"
  },

  "EmailSettings": {
    "MailServer": "smtp.gmail.com",
    "MailPort": 587,
    "SenderName": "House Rent Management",
    "SenderEmail": "noreply@houserent.com",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password"
  },
  "Jwt": {
    "Key": "your-very-secure-jwt-secret-key",
    "Issuer": "https://houserentsystem.com",
    "Audience": "https://houserentsystem.com",
    "ExpireHours": 3
  },

  "FileStorage": {
    "BasePath": "C:/FileStorage", // Optional custom path
    "AllowedImageTypes": [ ".jpg", ".jpeg", ".png", ".gif" ],
    "AllowedDocumentTypes": [ ".pdf", ".doc", ".docx", ".xls", ".xlsx" ],
    "MaxFileSizeMB": 5
  },
  "BaseUrl": "https://yourdomain.com" // For generating file URLs
}
